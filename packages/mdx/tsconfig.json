{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib/",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src", "test-emit.ts", "test-runner.ts"],
  "exclude": ["node_modules"]
}
