{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib/",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src", "index.ts"],
  "exclude": ["src/*.test.ts"]
}
